<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_dark_onTertiary"
    android:backgroundTint="@color/md_theme_dark_onTertiary"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_num1"
        android:layout_width="83dp"
        android:layout_height="71dp"
        android:background="@color/md_theme_dark_inversePrimary"
        android:text="1"
        android:onClick="getNum"
        android:textSize="@dimen/fontSize"
        app:layout_constraintBottom_toTopOf="@+id/button_num4"
        app:layout_constraintEnd_toStartOf="@+id/button_num2"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.947" />

    <Button
        android:id="@+id/button_num2"
        android:layout_width="83dp"
        android:layout_height="71dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:background="@color/md_theme_dark_inversePrimary"
        android:text="2"
        android:onClick="getNum"
        android:textSize="@dimen/fontSize"
        app:layout_constraintBottom_toTopOf="@+id/button_num5"
        app:layout_constraintEnd_toStartOf="@+id/button_num3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_num3"
        android:layout_width="83dp"
        android:layout_height="71dp"
        android:layout_marginEnd="8dp"
        android:background="@color/md_theme_dark_inversePrimary"
        android:text="3"
        android:onClick="getNum"
        android:textSize="@dimen/fontSize"
        app:layout_constraintBottom_toTopOf="@+id/button_num6"
        app:layout_constraintEnd_toStartOf="@+id/button_plus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.947" />

    <Button
        android:id="@+id/button_num4"
        android:layout_width="83dp"
        android:layout_height="71dp"
        android:layout_marginBottom="28dp"
        android:background="@color/md_theme_dark_inversePrimary"
        android:text="4"
        android:onClick="getNum"
        android:textSize="@dimen/fontSize"
        app:layout_constraintBottom_toTopOf="@+id/button_num7"
        app:layout_constraintEnd_toStartOf="@+id/button_num5"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_num7"
        android:layout_width="83dp"
        android:layout_height="71dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/md_theme_dark_inversePrimary"
        android:text="7"
        android:onClick="getNum"
        android:textSize="@dimen/fontSize"
        app:layout_constraintBottom_toTopOf="@+id/button_num0"
        app:layout_constraintEnd_toStartOf="@+id/button_num8"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_num8" />

    <Button
        android:id="@+id/button_num0"
        android:layout_width="83dp"
        android:layout_height="71dp"
        android:layout_marginBottom="20dp"
        android:background="@color/md_theme_dark_inversePrimary"
        android:text="0"
        android:onClick="getNum"
        android:textSize="@dimen/fontSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_power"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_num5"
        android:layout_width="83dp"
        android:layout_height="71dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="28dp"
        android:background="@color/md_theme_dark_inversePrimary"
        android:text="5"
        android:onClick="getNum"
        android:textSize="@dimen/fontSize"
        app:layout_constraintBottom_toTopOf="@+id/button_num8"
        app:layout_constraintEnd_toStartOf="@+id/button_num6" />

    <Button
        android:id="@+id/button_num6"
        android:layout_width="83dp"
        android:layout_height="71dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="28dp"
        android:background="@color/md_theme_dark_inversePrimary"
        android:text="6"
        android:onClick="getNum"
        android:textSize="@dimen/fontSize"
        app:layout_constraintBottom_toTopOf="@+id/button_num9"
        app:layout_constraintEnd_toStartOf="@+id/button_minus" />

    <Button
        android:id="@+id/button_num8"
        android:layout_width="83dp"
        android:layout_height="71dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="20dp"
        android:background="@color/md_theme_dark_inversePrimary"
        android:text="8"
        android:onClick="getNum"
        android:textSize="@dimen/fontSize"
        app:layout_constraintBottom_toTopOf="@+id/button_power"
        app:layout_constraintEnd_toStartOf="@+id/button_num9"
        app:layout_constraintStart_toStartOf="@+id/button_num5" />

    <Button
        android:id="@+id/button_num9"
        android:layout_width="83dp"
        android:layout_height="71dp"
        android:layout_marginBottom="20dp"
        android:background="@color/md_theme_dark_inversePrimary"
        android:text="9"
        android:onClick="getNum"
        android:textSize="@dimen/fontSize"
        app:layout_constraintBottom_toTopOf="@+id/button_percent"
        app:layout_constraintStart_toStartOf="@+id/button_num6" />

    <Button
        android:id="@+id/button_power"
        android:layout_width="83dp"
        android:layout_height="71dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="20dp"
        android:text="^"
        android:onClick="getFunction"
        android:textSize="@dimen/fontSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_percent" />

    <Button
        android:id="@+id/button_percent"
        android:layout_width="83dp"
        android:layout_height="71dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        android:text="%"
        android:onClick="getFunction"
        android:textSize="@dimen/fontSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_equals" />

    <Button
        android:id="@+id/button_plus"
        android:layout_width="68dp"
        android:layout_height="72dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="@color/md_theme_dark_inversePrimary"
        android:text="+"
        android:onClick="getFunction"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/fontSize"
        app:layout_constraintBottom_toTopOf="@+id/button_minus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_minus"
        android:layout_width="68dp"
        android:layout_height="72dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/md_theme_dark_inversePrimary"
        android:text="-"
        android:onClick="getFunction"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/fontSize"
        app:layout_constraintBottom_toTopOf="@+id/button_multiply"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_multiply"
        android:layout_width="68dp"
        android:layout_height="72dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/md_theme_dark_inversePrimary"
        android:text="*"
        android:onClick="getFunction"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/fontSize"
        app:layout_constraintBottom_toTopOf="@+id/button_divide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toEndOf="@+id/button_num9"
        app:layout_constraintTop_toTopOf="@+id/button_num8"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_divide"
        android:layout_width="68dp"
        android:layout_height="72dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="@color/md_theme_dark_inversePrimary"
        android:text="/"
        android:onClick="getFunction"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/fontSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_equals"
        android:layout_width="69dp"
        android:layout_height="61dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/md_theme_dark_inversePrimary"
        android:text="="
        android:onClick="equalsTo"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/fontSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_divide"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_display"
        android:layout_width="343dp"
        android:layout_height="155dp"
        android:layout_margin="@dimen/margin"
        android:layout_marginTop="52dp"
        android:padding="@dimen/padding"
        android:text="@string/Text_View_Output"
        android:textAlignment="center"
        android:textColor="@color/md_theme_dark_onPrimaryContainer"
        android:textSize="@dimen/fontSize"
        app:layout_constraintBottom_toTopOf="@+id/button_clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.573"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.887" />

    <Button
        android:id="@+id/button_clear"
        android:layout_width="347dp"
        android:layout_height="62dp"
        android:background="@color/md_theme_dark_inversePrimary"
        android:backgroundTint="@color/md_theme_dark_inversePrimary"
        android:onClick="clear"
        android:text="@string/Clear_Button"
        android:textSize="@dimen/fontSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.416" />

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/padding"
        android:text="@string/Calculator_Display"
        android:textColor="@color/md_theme_dark_onPrimaryContainer"
        android:textSize="@dimen/fontSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

</androidx.constraintlayout.widget.ConstraintLayout>